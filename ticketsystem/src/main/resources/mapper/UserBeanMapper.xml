<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xa.dao.UserDao">
<cache type="org.mybatis.caches.ehcache.EhcacheCache" />
  <resultMap id="myUser" type="com.xa.bean.UserBean">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="loginname" jdbcType="VARCHAR" property="loginname" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="user_name" jdbcType="VARCHAR" property="userName" />
    <result column="sex" jdbcType="VARCHAR" property="sex"/>
    <result column="age" jdbcType="INTEGER" property="age"/>
  </resultMap>
  
  <select id="login" resultMap="myUser">
   select user_id,loginname,password,user_name,sex,age from user_tb where loginname = #{ln} and password = #{ps}
  </select>
  
  <select id="getOneUser" resultMap="myUser">
   select user_id,loginname,password,user_name,sex,age from user_tb where user_id = #{userId} 
  </select>
  
</mapper>